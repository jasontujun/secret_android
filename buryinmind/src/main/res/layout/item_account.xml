<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/bg_transparent_gray">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="@dimen/head_profile_middle_size"
            android:layout_height="@dimen/head_profile_middle_size">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/account_head_img"
                android:layout_width="@dimen/head_profile_small_size"
                android:layout_height="@dimen/head_profile_small_size"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/headicon_default"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/darkGray"/>
            <ImageView
                android:id="@+id/account_favorite"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/icon_favorite_red"
                android:visibility="gone"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/account_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:singleLine="true"
                android:textSize="@dimen/text_size_middle"
                android:textColor="@color/darkGray"
                tools:text="Tujun"/>
            <TextView
                android:id="@+id/account_des_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxWidth="250dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/gray"
                tools:text="dirty boy, shenzhen, NJU"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/account_about_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingRight="10dp"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/gray"
            android:text="@string/info_about"/>
        <TextView
            android:id="@+id/account_about_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/gray"
            android:singleLine="true"
            tools:text="fuck adfasdfsfs dafasdfsd"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/account_question_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingRight="10dp"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/gray"
            android:text="@string/info_question"/>
        <TextView
            android:id="@+id/account_question_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/gray"
            android:singleLine="true"
            tools:text="Do you remember ..."/>
    </LinearLayout>
</LinearLayout>