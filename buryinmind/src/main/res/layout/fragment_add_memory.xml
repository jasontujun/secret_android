<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <android.support.v7.widget.CardView
        android:id="@+id/memory_cover_card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        app:cardCornerRadius="0dp"
        app:elevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <FrameLayout
                android:id="@+id/memory_cover_img_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="@drawable/bg_transparent_gray">
                <ImageView
                    android:id="@+id/memory_cover_img"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    tools:src="@color/gray"/>
                <ImageView
                    android:id="@+id/memory_cover_add_tip"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_add_photo_white"/>
            </FrameLayout>
            <EditText
                android:id="@+id/memory_name_input_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/memory_cover_img_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:gravity="bottom"
                android:padding="6dp"
                android:textSize="@dimen/text_size_middle"
                android:textColor="@color/gray"
                android:singleLine="true"
                android:hint="@string/prompt_memory_name"
                android:inputType="text"
                android:imeOptions="actionSearch"/>
            <TextView
                android:id="@+id/memory_time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_small"
                android:background="@drawable/bg_transparent_gray"
                tools:text="äºŽ 2006.10.26"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>