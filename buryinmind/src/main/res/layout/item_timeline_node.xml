<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/timeline_padding"
    android:paddingRight="@dimen/timeline_padding"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/timeline_tag_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="@dimen/timeline_width"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="2dp"
                android:layout_height="@dimen/timeline_tag_margin_top"
                android:layout_gravity="center_horizontal"
                android:background="@color/darkGray"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="@dimen/timeline_tag_size"
                    android:layout_height="@dimen/timeline_tag_size"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_hollow_node"/>
                <TextView
                    android:id="@+id/timeline_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_middle"
                    android:textColor="@color/darkGray"
                    android:textStyle="bold"
                    tools:text="18"/>
            </RelativeLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="@dimen/timeline_tag_margin_bottom"
                android:layout_gravity="center_horizontal"
                android:background="@color/darkGray"/>
        </LinearLayout>
        <TextView
            android:id="@+id/timeline_tag_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="6dp"
            android:singleLine="true"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/gray"
            tools:text="2008年"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/timeline_node_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_transparent_gray">
        <RelativeLayout
            android:layout_width="@dimen/timeline_width"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/timeline_divider">
            <ImageView
                android:layout_width="@dimen/timeline_node_size"
                android:layout_height="@dimen/timeline_node_size"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/timeline_node_margin_top"
                android:src="@drawable/icon_solid_node"/>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/darkGray"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/timeline_node_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/timeline_content_margin_left"
            android:layout_marginTop="@dimen/timeline_content_margin"
            android:padding="6dp"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/gray"
            tools:text="岁月静好，不忘有你"/>
        <LinearLayout
            android:id="@+id/timeline_node_date_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/timeline_divider_margin_left"
            android:layout_below="@+id/timeline_node_txt"
            android:orientation="horizontal"
            tools:visibility="visible">
            <View
                android:layout_width="16dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/timeline_node_margin_top"
                android:layout_marginRight="@dimen/timeline_content_margin"
                android:background="@color/gray"/>
            <TextView
                android:id="@+id/timeline_node_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:singleLine="true"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/gray"
                tools:text="2015.3.15"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/timeline_node_img_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/timeline_divider_margin_left"
            android:layout_below="@+id/timeline_node_date_layout"
            android:orientation="horizontal"
            tools:visibility="visible">
            <View
                android:layout_width="16dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/timeline_node_margin_top"
                android:layout_marginRight="@dimen/timeline_content_margin"
                android:background="@color/gray"/>
            <ImageView
                android:id="@+id/timeline_node_img"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                tools:src="@drawable/test"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/timeline_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/timeline_node_margin_top"
            android:layout_below="@+id/timeline_node_img_layout"
            android:layout_marginLeft="@dimen/timeline_divider_margin_left"
            android:paddingBottom="@dimen/timeline_node_margin_bottom">
            <View
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:background="@color/gray"/>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>