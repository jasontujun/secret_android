<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/account_profile_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/profile_default"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_profile_mask"/>

    <RelativeLayout
        android:id="@+id/account_line"
        android:layout_width="@dimen/timeline_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/timeline_padding"
        android:layout_marginTop="30dp"
        android:layout_alignTop="@+id/account_head_img"
        android:visibility="gone">
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/darkGray"/>
    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/account_head_img"
        android:layout_width="@dimen/head_profile_big_size"
        android:layout_height="@dimen/head_profile_big_size"
        android:src="@drawable/headicon_default"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/darkGray"/>
    <TextView
        android:id="@+id/account_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/account_head_img"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:textSize="@dimen/text_size_big"
        android:textColor="@color/darkGray"
        tools:text="Tujun"/>
    <TextView
        android:id="@+id/account_des_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/account_head_img"
        android:layout_below="@+id/account_name_txt"
        android:padding="10dp"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/gray"
        android:lineSpacingMultiplier="2"
        android:background="@drawable/bg_transparent_gray"
        tools:text="dirty boy, shenzhen, NJU"/>
</RelativeLayout>