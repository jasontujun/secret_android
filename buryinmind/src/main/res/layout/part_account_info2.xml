<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <ImageView
        android:id="@+id/account_head_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        tools:src="@drawable/test"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/account_head_img"
        android:layout_alignTop="@id/account_head_img"
        android:layout_marginTop="6dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/account_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/text_size_big"
            android:textColor="@color/darkGray"
            tools:text="Tujun"/>
        <TextView
            android:id="@+id/account_des_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/gray"
            android:maxLines="3"
            tools:text="dirty boy, shenzhen, NJU"/>
    </LinearLayout>
</RelativeLayout>