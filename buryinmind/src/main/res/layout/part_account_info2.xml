<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/account_head_img"
        android:layout_width="@dimen/head_profile_big_size"
        android:layout_height="@dimen/head_profile_big_size"
        android:src="@drawable/headicon_default"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/darkGray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/account_head_img"
        android:layout_alignTop="@id/account_head_img"
        android:layout_marginTop="6dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/account_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/text_size_big"
            android:textColor="@color/darkGray"
            tools:text="Tujun"/>
        <TextView
            android:id="@+id/account_des_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/gray"
            android:maxLines="3"
            android:background="?attr/selectableItemBackground"
            tools:text="dirty boy, shenzhen, NJU"/>
    </LinearLayout>
</RelativeLayout>