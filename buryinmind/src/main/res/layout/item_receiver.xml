<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="75dp"
    android:layout_height="75dp"
    android:padding="3dp"
    android:background="@drawable/bg_transparent_gray">
        <ImageView
            android:id="@+id/account_head_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/headicon_default"
            android:background="@drawable/bg_stamp"/>
        <ImageView
            android:id="@+id/account_state"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/stamp_deny"/>
</RelativeLayout>