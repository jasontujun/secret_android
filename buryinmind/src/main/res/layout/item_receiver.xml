<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="60dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_transparent_gray">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/account_head_img"
            android:layout_width="@dimen/head_profile_tiny_size"
            android:layout_height="@dimen/head_profile_tiny_size"
            android:layout_centerInParent="true"
            android:src="@drawable/headicon_default"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/black"/>
        <ImageView
            android:id="@+id/account_state"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/icon_check_box_uncertain_blue"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/account_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="50dp"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/gray"
        tools:text="Tujun"/>
</LinearLayout>