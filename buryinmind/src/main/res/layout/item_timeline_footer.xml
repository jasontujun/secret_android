<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/timeline_padding"
    android:paddingRight="@dimen/timeline_padding">
    <TextView
        android:id="@+id/timeline_footer_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/timeline_divider_margin_left"
        android:paddingLeft="36dp"
        android:paddingTop="85dp"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/gray"
        android:text="@string/info_timeline_footer"
        android:background="@drawable/bg_transparent_gray"/>
    <RelativeLayout
        android:layout_width="@dimen/timeline_width"
        android:layout_height="wrap_content"
        android:paddingBottom="100dp">
        <View
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/timeline_footer_layout"
            android:layout_marginBottom="10dp"
            android:background="@color/darkGray"/>
        <LinearLayout
            android:id="@+id/timeline_footer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/timeline_footer_margin_top"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/timeline_dot_size"
                android:layout_height="@dimen/timeline_dot_size"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_dot_node"/>
            <ImageView
                android:layout_width="@dimen/timeline_dot_size"
                android:layout_height="@dimen/timeline_dot_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_dot_node"/>
            <ImageView
                android:layout_width="@dimen/timeline_node_size"
                android:layout_height="@dimen/timeline_node_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@drawable/icon_solid_node"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>