<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/timeline_padding"
    android:paddingRight="@dimen/timeline_padding"
    android:orientation="horizontal"
    android:background="@drawable/bg_transparent_gray">
    <RelativeLayout
        android:layout_width="@dimen/timeline_width"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/timeline_header_node"
            android:layout_width="@dimen/timeline_header_size"
            android:layout_height="@dimen/timeline_header_size"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/timeline_node_margin_top"
            android:src="@drawable/icon_header_node"/>
        <View
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/timeline_header_node"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@color/darkGray"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="6dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/timeline_header_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/darkGray"
            tools:text="1990.6.16"/>
        <TextView
            android:id="@+id/timeline_header_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/gray"
            android:text="@string/info_timeline_header"/>

    </LinearLayout>
</LinearLayout>