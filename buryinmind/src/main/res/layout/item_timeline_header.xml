<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingLeft="@dimen/timeline_padding"
    android:paddingRight="@dimen/timeline_padding"
    android:background="@drawable/bg_transparent_gray">
    <LinearLayout
        android:id="@+id/timeline_header_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/timeline_divider_margin_left"
        android:paddingLeft="36dp"
        android:orientation="vertical"
        android:background="@drawable/bg_transparent_gray">
        <TextView
            android:id="@+id/timeline_header_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/gray"
            android:text="@string/info_timeline_header"/>
        <TextView
            android:id="@+id/timeline_header_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/gray"
            tools:text="1990.6.16"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="@dimen/timeline_width"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/timeline_header_node"
            android:layout_width="@dimen/timeline_header_size"
            android:layout_height="@dimen/timeline_header_size"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/timeline_node_margin_top"
            android:src="@drawable/icon_header_node"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/darkGray"/>
    </RelativeLayout>
</RelativeLayout>